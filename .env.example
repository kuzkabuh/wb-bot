# --- Postgres ---
POSTGRES_USER=wb
POSTGRES_PASSWORD=wbpass
POSTGRES_DB=wb
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Telegram ---
TELEGRAM_BOT_TOKEN=__PUT_YOUR_TOKEN__
TELEGRAM_WEBHOOK_SECRET=change_me_secret # header X-Telegram-Bot-Api-Secret-Token
PUBLIC_BASE_URL=https://app.kuzkabuh.ru
WEBHOOK_PATH=/tg/webhook/replace_with_random_slug

# --- Crypto master key (32 bytes base64, prefixed by base64:) ---
MASTER_ENCRYPTION_KEY=base64:replace_me

# --- App ---
TIMEZONE=Europe/Moscow
LOG_LEVEL=INFO

# --- Celery ---
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
SYNC_INTERVAL_MINUTES=30

# --- Admin token for /admin/set_webhook (simple bearer) ---
ADMIN_TOKEN=set_me_for_admin_calls
